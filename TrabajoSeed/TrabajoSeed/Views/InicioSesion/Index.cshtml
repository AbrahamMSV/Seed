
@{
    ViewData["Title"] = "Index";
}
@model TrabajoSeed.Models.UserInfo
<h1>Index</h1>

<center>
    <div class="card">
        <div class="row">
            <section>
                <form asp-controller="InicioSesion" asp-action="Authenticate" method="post">
                    <h4>
                        Iniciar Sesión
                    </h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group text-left">
                        <label asp-for="CorreoElectronico"></label>
                        <input type="email" asp-for="CorreoElectronico" name="input.CorreoElectronico" class="form-control" />
                    </div>
                    <div class="form-group text-left">
                        <label >Contraseña</label>
                        <input type="text" asp-for="NumeroDeTelefonoMovil" name="input.NumeroDeTelefonoMovil" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Iniciar Sesión</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</center>